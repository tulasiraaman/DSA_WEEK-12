class Solution {
    public int[][] floodFill(int[][] image, int sr, int sc, int color) {
        if (image[sr][sc] == color)
            return image;
        dfs(image, sr, sc, color, image[sr][sc]);
        return image;
    }

    private void dfs(int[][] image, int row, int col, int color, int initColor) {
        int n = image.length;
        int m = image[0].length;

        // Boundary check first
        if (row < 0 || row >= n || col < 0 || col >= m)
            return;

        // Only fill if the current pixel matches the initial color
        if (image[row][col] != initColor)
            return;

        image[row][col] = color;

        dfs(image, row + 1, col, color, initColor);
        dfs(image, row - 1, col, color, initColor);
        dfs(image, row, col + 1, color, initColor);
        dfs(image, row, col - 1, color, initColor);
    }
}
// TC - O(N . M), SC - O(N . M)
